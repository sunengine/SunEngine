@import '~variables';
@import '/css/fonts/BoomBoomRegular.css';

// ——— Main ————————————————————————————————————

body {
  color: #06000d;
  font-family: 'Open Sans', sans-serif;
}

a {
  text-decoration: none;
  color: #3a67d3;
}

.q-title {
  margin-top: 6px;
}

.header-with-button {
  margin-bottom: $flex-gutter-sm;

  .q-title {
    float: left;
    margin-bottom: 6px !important;
  }

  button {
    float: right;
  }
}

.center {
  text-align: center;
}

.text-img {
  max-width: 100%;
}

.middle {
  align-content: center;
  justify-content: center;
  align-items: center;
}

.avatar {
  width: 38px;
  border-radius: 15px;
}

.center-form {
  width: 400px;
  display flex;
  flex-direction: column;
  justify-content: stretch;
}

.clear {
  clear: both;
}

.modal-message,.q-notification {
  white-space: pre-wrap;
}

// ——— Elements ————————————————————————————————————

.menu-panel-title {
  text-align: center;
  margin: 0;
  padding: 7px 0 4px 0;
  text-transform: uppercase;
  font-size: 0.9rem;
  font-weight: bolder;
  background-color: #f3ffdd;
  border-bottom: 1px solid #cacaca;
  color: $grey-8;
}


// ——— Colors ————————————————————————————————————

.bg-post {
  background-color: #66f532 !important;
}


.bg-send {
  background-color: #66f532 !important;
}

.text-send {
  color: #66f532 !important;
}

.bg-pagination {
  background-color: #66f532 !important;
}

.text-pagination {
  color: $primary !important;
}


.q-pagination {
  button {
    color: $secondary !important;
  }
}

.q-field {
  .text-primary {
    color: #55cb2b !important;
  }
}

.inline-flex {
  display: inline-flex;
}

.info-block {
  display: flex;

  span {
    display: inline-flex;
    margin-right: 10px;
    white-space: nowrap;
    align-items: center;


    .q-icon {
      margin-right: 5px;
    }
  }
}


.desktop { // ——— Editor multiline toolbar for desktop ————————————————————————————————————

  .q-editor-toolbar-padding {
    flex-wrap: wrap !important;
  }

  .q-editor-toolbar .q-btn-group + .q-btn-group {
    margin-left: unset !important;
    margin-right: 5px !important;
  }

  .q-editor-toolbar-separator .q-btn-group + .q-btn-group {
    padding-left: unset !important;
    padding-right: 5px !important;
  }

  .q-editor-toolbar-separator .q-btn-group + .q-btn-group:before {
    content: unset !important;
    position: unset !important;
    right: unset !important;
    top: unset !important;
    bottom: unset !important;
    height: unset !important;
    width: unset !important;
    background: unset !important;
  }

  .q-editor-toolbar-separator .q-btn-group + .q-btn-group:after {
    content: ' ';
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    height: 100%;
    width: 1px;
    background: #ccc !important;
  }

  .q-editor-toolbar-separator .q-btn-group:last-child:after {
    content: unset !important;
    position: unset !important;
    right: unset !important;
    top: unset !important;
    bottom: unset !important;
    height: unset !important;
    width: unset !important;
    background: unset !important;
  }
}


.menu-list {
  .q-item-side {
    min-width: 18px !important;
    display: flex !important;
    align-items: center !important;
    justify-items: center !important;

    .q-item-icon {
      font-size: 16px !important;
    }
  }

  .q-item {
    white-space: nowrap;

    .q-icon {
      font-size: 16px !important;
      color: $grey-9;

      &:before {
        width: 18px;
        display: flex;
        margin-right: 8px !important;
      }
    }
  }
}


// ——— Margins ————————————————————————————————————

//$pagePaddings = ( 24px 18px 12px )

mp($size) {

  .q-layout-page {
    padding: $size !important;
  }

  .margin-back {
    margin-left: - $size !important;
    margin-right: - $size !important;
  }

  .margin-back-right {
    margin-right: - $size !important;
  }

  .margin-back-left {
    margin-left: - $size !important;
  }

  .pp-both {
    padding-right: $size !important;
    padding-left: $size !important;
  }

  .pp-right {
    padding-right: $size !important;
  }

  .pp-left {
    padding-left: $size !important;
  }
}

mp(24px);

@media (max-width: 400px) {
  mp(12px)
}

@media ( min-width: 401px ) and ( max-width: 701px ) {
  mp(18px)
}

// ——— Roles ————————————————————————————————————

.group-admin {
  font-weight : 600;
  color : #ff7c00;
}

.group-moderator {
  font-weight : 600;
  color : green;
}
