$text-color =  #06000d;
$link-color = #3498db;
$menu-color = unset;
$menu-icon-color = unset;
$menu-link-color = unset;
$header-background-color = #24c7ff;
$header-text-color = white;
$header-border-color = #cbcbcb;
$header-menu-icon-color = white;
$header-user-color = white;
$footer-background-color = #d4f0ff;
$footer-text-color = #3498db;
$footer-link-color = #3498db;
$footer-border-color = #cbcbcb;
$panel-header-background = #ededed;


// ——— Main ——————————————————————————————————————


html {
  color: $text-color;
  font-family: 'Open Sans', sans-serif;
}


a, .link {
  text-decoration: none;
  color: $link-color;

  &:hover {
    color: #2472b3;
  }
}

.q-router-link--active {
  background-color: #e2f8e8;
}


// ——— Buttons ————————————————————————————————————


.send-btn {
  background-color: #54e288;
  color: white;
}

.post-btn {
  background-color: #c4f0ff;
  color: grey;

  &:hover {
    color: white;
  }
}

.cancel-btn {
  background-color: $warning;
  color: white;
}

.delete-btn {
  background-color: $negative;
  color: white;
}

.bg-pagination {
  background-color: $header-background-color !important;
}

.text-pagination {
  color: $link-color !important;
}


// ——— Layout ————————————————————————————————————


.layout__header {
  border-bottom: 1px solid $header-border-color;
}

.layout__toolbar {
  background-color: $header-background-color;
}

.layout__title {
  font-family: "Jomolhari";
  letter-spacing: 1.4px;
  font-size: 1.4rem;
  font-weight: bold;

  a {
    color: $header-text-color;
    //text-shadow:  0px 0px 6px white, 0px 0px 6px white, 0px 0px 6px white;
  }
}

.main-menu-drawer {
  background-color: $menu-color;
}

.side-menu-drawer {
}

.layout__toolbar__menu-btn {
  color: $header-menu-icon-color;
}

.layout__toolbar__user-btn {
  color: $header-user-color;
}

.layout__user-avatar {
  width: 32px !important;
  height: 32px !important;
  box-shadow: 0px 0px 4px 1.5px white !important;
}


.layout__footer {
  text-align: center;
  color: $footer-text-color;
  font-weight: bold;
  letter-spacing: 1px;
  background-color: $footer-background-color;
  padding: 18px 0;
  border-top: 1px solid $footer-border-color;

  a {
    color: $footer-link-color;
  }

  .links-menu__separator  {
    .q-icon {
        margin: 0 16px;
        color: #ffa500;
      }
  }
}

.layout__footer-line {
  margin: 12px 0;
}

// ——— MainMenu ——————————————————————————————————


.main-menu__logo-div {
  padding: 15px 0 22px 0;
  text-align: center;
}

.main-menu__logo-img {
  width: 204px;
  height: 204px;
  border-radius: 102px;
  box-shadow: 0 0 8px 1px grey
}

.main-menu {

  .q-router-link--active {
    background-color: #d0fccf;

    .q-item__section--main {
      color: black !important;
    }
  }

  .q-item__section--avatar {
    margin: 0 !important;
    padding: 0 !important;
    width: 60px !important;
    color: $link-color !important;
    justify-items: center !important;
    align-items: center !important;
  }

  .q-item__section--main {
    font-size: 1.2em;
    color: black !important;
  }

  .q-item__label--caption {
    font-size: 0.8em;
  }
}


// ——— Panel ————————————————————————————————————


.panel-wrapper__header {
  text-align: center;
  margin: 0;
  padding: 7px 0 4px 0;
  text-transform: uppercase;
  font-size: 0.9rem !important;
  font-weight: bolder;
  background-color: $panel-header-background;
  border-bottom: 1px solid #f1f1f1;
  color: $grey-8;
}


// ——— Material styles ———————————————————————————


.material-text, .post-text, .comment-text {
  h3 {
    font-size: 1.55rem;
    font-weight: 500 !important;
    line-height: 1.7rem;
    margin: 35px 0 14px 0 !important;
    border-bottom: 2px dashed #c1dfee;
    padding: 0 0 8px 0;
  }

  h4 {
    font-size: 1.35rem;
    font-weight: 500 !important;
    line-height: 1.4rem;
    margin: 24px 0 10px 0 !important;
    border-bottom: 1px dashed #c1dfee;
    padding: 0 0 6px 0;
  }

  h5 {
    font-size: 1.2rem;
    font-weight: 500 !important;
    line-height: 1.3rem;
    margin: 16px 0 8px 0 !important;
    padding: 0;
  }

  h6 {
    font-size: 1.05rem;
    font-weight: 500 !important;
    line-height: 1.1rem;
    margin: 10px 0 6px 0 !important;
    padding: 0;
  }

  blockquote {
    border-left: 3px solid #a6c59e !important;
    padding: 6px 0 6px 15px;
    background-color: #f6f6f6;
    margin: 0 0 16px 0;
  }
}

